<body>

  <div class="container-fluid">

  
    <%- include("header") -%>

    <% 
    var disa = "datosdeenvio"
    var _btn = "btn_sensa_priory"
    if(articulo.cantidad == 0){
    var disa = ""
    _btn = "btn-secondary"
    }
    %>


    <center>
      <div class="card mb-5 mt-5 shadow" style="max-width: 80%; height: auto;">
        <div class="row no-gutters">
          <div class="col-md-6 p-3">
            <img src="img/<%= articulo.file %>" class="img_art " alt="..." id="img_1">

          </div>
          <div class="col-md-5">
            <div class="card-body">
              <h5 class=" invisible " id="idproducto"><%= articulo._id %></h5>
              <h5 class="card-title mb-5"id="producto"> <%= articulo.producto %> </h5>
              <h4 class="text-success" id = "precio"> <%= "$ " + articulo.precio.toFixed(2) %> </h4>
              <p class="card-text" id="marca"> Marca: <%= " " + articulo.marca %> </p>
              <p class="card-text" id="marca"> Modelo: <%= " " + articulo.modelo %> </p>
              <p class="card-text" id="marca"> Color: <%= " " + articulo.color %> </p>
              <p class="card-text">Disponibles: <%= " " + articulo.cantidad %> </p>
              <p class="card-text">Descripción:</p>
              <p class="card-text text-muted"> <%=  articulo.descripcion %> .</p>
              <p class="card-text"><small class="text-primary">Llega mañana.</small></p>
              <div class="form-group">
                <label for="cantidad">Cantidad:</label>
                <input type="number" min="1" class="form-control w-25 text-primary font-weight-bold " id="cantidad" aria-describedby="emailHelp" value="1">
              </div>
              
              <p><a class="btn <%= _btn %> pl-4 pr-4" href="#" role="button" data-toggle="modal" data-target="#<%= disa  %>"   >Comprar</a></p>
              <p><a type="button" href="/articulo_addcarrito?id=<%= articulo._id %>" class="btn btn_carr ">Agragar al carrito</a></p>
            </div>
          </div>
        </div>
      </div>
    </center>
    
    <h3 class="mb-5" style="margin-left: 10%;">Otros también buscaron:</h3>
    <div class="row mb-5">
      <div class="col-3"></div>
      <dif class="col-7">
        <div class="row row-cols-1 row-cols-md-3 justify-content-center">
          <% for(var i = 0 ; i < articulos.docs.length ; i++){ %>
            <a href="/articulo?id=<%= articulos.docs[i]._id %>" class=a_news>

            <div class="card-group">
              <div class=" mr-3 shadow" style="width: 200px; height: 300px; overflow-y: hidden;">
                <center><img src="/img/<%= articulos.docs[i].file %>" class="card-img-top img_card center-block p-2" alt="..."></center>
                <div class="card-body">
                  <h4 class="card-title"> <%= articulos.docs[i].producto %> </h4>
                  <p class="text-success float-right h5" style="right: 3px;">  <%= "$ " + articulos.docs[i].precio.toFixed(2) %> </p>
                  
                  <br>
                 
                </div>
              </div>
             
            </div>
          </a>
            <% } %>
          </div>

      </dif>
    </div>

   
   



      <%- include("footer") -%>

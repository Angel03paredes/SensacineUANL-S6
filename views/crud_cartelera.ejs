<body>
  <%- include('a_header') -%>

  <div class="container-fluid">
    <div class="d-flex justify-content-between align-content-center mb-3"> 
        <h1>Cartelera</h1>
    </div>

<div class="row">
  <div class="col-3"></div>
  <div class="col-6">
   <div class="card shadow p-3">
    <form class="p-2" method="POST" action="/alta_cartelera" enctype="multipart/form-data">
      <div class="form-group">
        <label for="pelicula">Película </label>
        <input  type="text" class="form-control" id="pelicula" name="pelicula" aria-describedby="emailHelp" >
      </div>
      <div class="form-group">
        <label for="idioma">Idioma</label>
        <input  type="text" class="form-control" id="idioma" name="idioma" aria-describedby="emailHelp" >
      </div>
      <div class="form-group">
        <label for="hora">Hora de inicio</label>
        <input  type="text" class="form-control" id="hora" name="hora" aria-describedby="emailHelp" >
      </div>
      <div class="form-group">
        <label for="estado">Estado</label>
        <input  type="text" class="form-control" id="estado" name="estado" aria-describedby="emailHelp" >
      </div>
      <div class="form-group">
        <label for="cine">Cine</label>
        <input  type="text" class="form-control" id="cine" name="cine" aria-describedby="emailHelp" >
      </div>
      <div class="form-group">
        <label for="link">Redirección</label>
        <input  type="text" class="form-control" id="link" name="link" aria-describedby="emailHelp" >
      </div>
   
    <div class="custom-file mb-3">
      <input type="file" class="custom-file-input" id="file" lang="es" name="file" required >
      <label class="custom-file-label" for="portada" data-browse="Buscar">Seleccionar portada de película...</label>
    </div>
         <center> <button type="submit" class="btn btn-success">Crear</button></center>
     
    </form>
   </div>
  </div>
  <div class="col-3"></div>
</div>

</div>


